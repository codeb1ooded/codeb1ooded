<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDarkest"
    tools:context=".AboutMeActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/colorNormal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingTop="16dp"
            android:layout_height="match_parent"
            android:background="@color/colorDarker">

            <TextView
                android:id="@+id/list_sw_title1"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Care Promise Welfare Society "
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="16sp"
                android:textColor="@color/colorLightest" />

            <TextView
                android:id="@+id/list_sw_detail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_sw_title1"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorLightest"
                android:ellipsize="end"
                android:text="Certificate of Special Effort and Silver Medal for participating as volunteer in Mass Awareness Campaign against Cancer/ Hepatitis-B"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/colorNormal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingTop="16dp"
            android:layout_height="match_parent"
            android:background="@color/colorDarker">

            <TextView
                android:id="@+id/list_sw_title2"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Leaders For Tomorrow"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="16sp"
                android:textColor="@color/colorLightest" />

            <TextView
                android:id="@+id/list_sw_detail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_sw_title2"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorLightest"
                android:ellipsize="end"
                android:text="Volunteered for LFT's Annual Fest-DWD'15 and other awareness programmes organized"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
