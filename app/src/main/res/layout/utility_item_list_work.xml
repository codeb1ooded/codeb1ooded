<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="@dimen/std_margin"
    android:layout_marginLeft="@dimen/std_margin"
    android:layout_marginRight="@dimen/std_margin"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="@color/colorNormal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/std_margin"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorDarker">

        <TextView
            android:id="@+id/work_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/std_margin"
            android:layout_marginRight="@dimen/std_margin"
            android:text="Title"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@color/colorLightest" />

        <TextView
            android:id="@+id/work_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/work_title"
            android:layout_marginLeft="@dimen/std_margin"
            android:layout_marginRight="@dimen/std_margin"
            android:textColor="@color/colorLightest"
            android:text="Description"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>