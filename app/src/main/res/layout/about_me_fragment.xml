<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <com.nightonke.wowoviewpager.WoWoViewPager
        android:id="@+id/wowo_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_pink_blue_circle"
        />

    <RelativeLayout
        android:id="@+id/sub_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_logo"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:src="@drawable/myimage"
            android:layout_centerInParent="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorLightest"
            android:background="@drawable/background_shape_cv_logo"
            />

        <TextView
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingStart="80dp"
            android:gravity="center"
            android:text="@string/cv_text"
            android:textColor="@color/colorLightest"
            android:textSize="@dimen/cv_text_size"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            />

        <TextView
            android:id="@+id/for_android_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/android_developer"
            android:textColor="@color/colorLightest"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"
            android:layout_below="@+id/cv"
            android:layout_centerHorizontal="true"
            />

        <TextView
            tools:ignore="MissingPrefix"
            fontPath="fonts/waltograph42.ttf"
            android:id="@+id/name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightest"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="@string/my_name"
            android:layout_below="@+id/cv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/university_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/university"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/university_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size"
            android:text="@string/sophomore_text"
            android:textSize="16sp"
            android:textColor="@color/colorLightest"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/university_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:id="@+id/mail_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/mail"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="60dp"
            />

        <TextView
            android:id="@+id/mail_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size"
            android:text="@string/email_id"
            android:textColor="@color/colorLightest"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/university_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            />

        <TextView
            android:id="@+id/projects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_text"
            android:textStyle="bold"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/colorLightest"
            android:paddingLeft="@dimen/padding_largest"
            android:paddingStart="@dimen/padding_largest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp"
            />

        <TextView
            android:id="@+id/rti_home_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_rti"
            android:textStyle="bold"
            android:textSize="@dimen/less_small_text_size"
            android:textColor="@color/colorLightest"
            android:paddingLeft="@dimen/padding_most_largest"
            android:paddingStart="@dimen/padding_most_largest"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/projects"
            android:layout_marginTop="@dimen/bigger_margin"
            />

        <TextView
            android:id="@+id/movieplate_home_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/project_movieplate"
            android:textSize="@dimen/less_small_text_size"
            android:textColor="@color/colorLightest"
            android:paddingLeft="@dimen/padding_most_largest"
            android:paddingStart="@dimen/padding_most_largest"
            android:layout_centerInParent="true"
            android:layout_below="@+id/rti_home_screen"
            android:layout_marginTop="@dimen/bigger_margin"
            />

        <TextView
            android:id="@+id/othello_home_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_othello"
            android:textStyle="bold"
            android:textSize="@dimen/less_small_text_size"
            android:textColor="@color/colorLightest"
            android:paddingLeft="@dimen/padding_most_largest"
            android:paddingStart="@dimen/padding_most_largest"
            android:layout_centerInParent="true"
            android:layout_below="@+id/movieplate_home_screen"
            android:layout_marginTop="@dimen/bigger_margin"
            />

        <TextView
            android:id="@+id/eventley_home_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_eventley"
            android:textStyle="bold"
            android:textSize="@dimen/less_small_text_size"
            android:textColor="@color/colorLightest"
            android:paddingLeft="@dimen/padding_most_largest"
            android:paddingStart="@dimen/padding_most_largest"
            android:layout_centerInParent="true"
            android:layout_below="@+id/othello_home_screen"
            android:layout_marginTop="@dimen/bigger_margin"
            />

        <TextView
            android:id="@+id/scientific_calculator_home_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_scientific_calculator"
            android:textStyle="bold"
            android:textSize="@dimen/less_small_text_size"
            android:textColor="@color/colorLightest"
            android:paddingLeft="@dimen/padding_most_largest"
            android:paddingStart="@dimen/padding_most_largest"
            android:layout_centerInParent="true"
            android:layout_below="@+id/eventley_home_screen"
            android:layout_marginTop="@dimen/bigger_margin"
            />

        <LinearLayout
            android:id="@+id/blog_and_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/for_more_text"
                android:paddingLeft="40dp"
                android:textColor="@color/colorLightest"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/tell_blog"
                android:textColor="@color/colorLightest"
                android:textSize="16sp"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/tell_github"
                android:textColor="@color/colorLightest"
                android:textSize="16sp"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dp"
                android:id="@+id/textView" />

        </LinearLayout>

        <com.nightonke.wowoviewpager.WoWoPathView
            android:id="@+id/pathview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:pathColor="@color/colorLightest"
            app:pathWidth="5"
            app:headImageId="@drawable/airplane"
            app:headImageWidth="240"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
